function add_playlists(sort_condition) {
  <%= render 'shared/check_musics', sort_condition: sort_condition %>
  if(checks.is(":checked")) {
    $.ajax({
      url: '/user_musics/',
      type: 'POST',
      data: {
        music_ids: check_array,
        sort_condition: sort_condition
      }
    });
  }
}
