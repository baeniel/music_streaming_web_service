<div class="container mt-5">
  <%= render 'shared/back' %>
  <h3 class="text-center my-4">그룹 만들기</h3>
  <%= form_for Group.new, remote: true do |f| %>
    <%= hidden_field_tag 'music_ids', @music_ids %>
    <div class="my-4">
      <label for="InputTitle" class="form-label">제목</label>
      <%= f.text_field :title, autofocus: true, class: "form-control", id: "InputTitle" %>
    </div>
    <div class="mb-4">
      <label for="InputImage" class="form-label">그룹 이미지</label>
      <%= f.file_field :image, class: "form-control", id: "InputImage" %>
    </div>
    <div class="mb-4">
      <label for="InputIntro" class="form-label">소개글</label>
      <%= f.text_area :intro, rows: 2, cols: 1, class: "form-control", id: "InputIntro" %>
    </div>
    <%= f.submit "생성", class: "ringle-button text-white py-2 d-grid gap-2 col-2 mx-auto no-border"  %>
  <% end %>
</div>
